<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>

</head>
<style>
    body{
        display: flex;
        flex-direction: column;
    }
    .imgbook {
        transition: all 1s ease-in;
        width: 400px;
    }

    .imgbook:hover {
        transform: scale(0.9);
        cursor: pointer;
    }

    .imgsachbannhieu {
        width: 100px;
    }
    #container{
        display: flex;
        flex-direction: row;
        padding: 5px;
    }
    .list-group{
        min-width: 250px;
        margin: 10px;
    }
    .Contrainer-Book {
        display: grid;
        grid-template-columns: 1fr 1fr;
    }
    .book{
        display: flex;
        flex-direction: row;
        padding: 10px;
        margin: 10px;
        
    }
    .book > img{
        width: 150px;
        height: 200px;
        margin: 5px;
    }

</style>

<body>
    <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12" id="container">
        <div>
            @Html.Partial("ChuDePartial")
        </div>
        <div>
            @RenderBody()
        </div>
    </div>
    @RenderSection("SachBanNhieu", required: false)
</body>
</html>
