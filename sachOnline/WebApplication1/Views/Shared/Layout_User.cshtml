<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>


</head>
<style>
    body{
        display: flex;
        flex-direction: column;
    }
    .imgbook {
        transition: all 1s ease-in;
        width: 400px;
    }

    .imgbook:hover {
        transform: scale(0.9);
        cursor: pointer;
    }

    .imgsachbannhieu {
        width: 100px;
    }
    #container{
        display: flex;
        flex-direction: row;
        padding: 5px;
    }
    .list-group{
        min-width: 250px;
        margin: 10px;
    }
    .Contrainer-Book {
        display: grid;
        grid-template-columns: 1fr 1fr;
    }
    .book{
        display: flex;
        flex-direction: row;
        padding: 10px;
        margin: 10px;
        
    }
    .book > img{
        width: 150px;
        height: 200px;
        margin: 5px;
    }

</style>

<body>
    <nav class="navbar navbar-inverse">
        <!--navbar-fixed-top-->
        <div class="container">
            @Html.Action("NavPartial", "SachOnline")
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-->
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                @Html.Action("SliderPartial", "SachOnline")
            </div>
     </div>
        </div>
        <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12" id="container">
            <div>
                @Html.Action("ChuDePartial", "SachOnline")
            </div>
            <div>
                @RenderBody()
            </div>
        </div>
        @RenderSection("SachBanNhieu", required: false)
        @Html.Action("FooterPartial", "SachOnline")
</body>
</html>
