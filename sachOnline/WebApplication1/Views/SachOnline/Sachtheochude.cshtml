@using PagedList;
@{
    ViewBag.Title = "Sachtheochude";
    Layout = "~/Views/Shared/Layout_User.cshtml";
    var p = ViewBag.Pager;

    var id = ViewBag.MaCd;
   
}
@foreach (var item in Model)
{
    <div class="col-sm-4 col-md-4 col-lg-4 col-xs-6">
        <div class="thumbnail">
            <img src="~/Images/Sach/@item.HinhMinhHoa" alt="Thumbnail Image 1" class="img-responsive img-rounded imgbook ">
            <div class="caption">
                <h3>
                    <a href="@Url.Action("Chitietsach","SachOnline", new { id =item.MaSach})">@item.TenSach</a>
                </h3>
                <p>Mô tả tóm tắt sản phẩm</p>
                <p><a href="#" class="btn btn-warning" role="button"><span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> Add to Cart</a></p>
            </div>
        </div>
    </div>
}

@section MenuPager{
    <div class="container">
        <ul class="pagination justify-content-end">
            @for (int i = p.StartPage; i <= p.EndPage; i++)
            {
                <li class="page-item @(i==p.CurrentPage ? "active" : "")">
                    <a class="page-link" href="~/SachOnline/Sachtheochude?id=@id&page=@i">@i</a>
                </li>
            }
        </ul>
    </div>
}


